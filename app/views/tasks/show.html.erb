<div class="container">
<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed == true %>
    <li>
      <p><input type="checkbox" name="task" id="checkbox" checked> This task is completed</p>
    </li>
  <% else %>
    <li>
      <p><input type="checkbox" id="checkbox"> This task is not completed yet</p>
    </li>
  <% end %>

<div class="back-link">
  <%=link_to tasks_path do %>
    <i class="fas fa-undo-alt"></i>
    Back to list
  <% end %>
</div>

</div>
